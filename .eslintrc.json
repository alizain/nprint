{
    "extends": "airbnb/legacy",
    "parserOptions": {
        "ecmaVersion": 5
    },
    "plugins": [],
    "rules": {
        "strict": [2, "function"],
        "indent": [2, 2],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "no-unused-vars": [1, {
            "vars": "local",
            "args": "none"
        }],
        "no-console": 1,
        "comma-dangle": 1,
        "padded-blocks": 0,
        "brace-style": [2, "stroustrup", {
            "allowSingleLine": true
        }],
        "max-len": 0,
        "no-cond-assign": [2, "except-parens"],
        "valid-jsdoc": 2
    },
    "env": {
        "browser": true
    }
}
